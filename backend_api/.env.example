# Server configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database
# For SQLite, provide a relative path under backend_api/ (e.g., ./data/dev.sqlite3)
DATABASE_URL=./data/dev.sqlite3

# Auth
# IMPORTANT: Set a strong secret in production
JWT_SECRET=please-change-me
# Optional: token lifetime (e.g., 7d, 12h)
JWT_EXPIRES_IN=7d
# Optional: bcrypt cost factor (default 10). Increase for production depending on performance.
BCRYPT_SALT_ROUNDS=10
